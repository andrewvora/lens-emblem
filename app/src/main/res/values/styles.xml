<resources>

    <style name="CardViewStyle">
        <item name="contentPadding">16dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
    </style>

    <style name="CardViewTextStyle">
        <item name="android:lineSpacingMultiplier">1.15</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextStyle" parent="android:Widget.TextView"/>

    <style name="PopupMenuStyle" parent="Base.Widget.AppCompat.Light.PopupMenu">
        <item name="colorAccent">?colorAccent</item>
        <item name="android:textColorSecondary">?android:textColorPrimary</item>
    </style>

    <!-- This will set the fade in animation on all your activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>
